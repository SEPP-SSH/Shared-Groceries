<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/sshCloud</property>
        <property name="hibernate.connection.username">admin</property>
        <property name="hibernate.connection.password">password</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Mapping classes -->
        <mapping class="com.example.entities.House" />
        <mapping class="com.example.entities.Housemate" />
        <mapping class="com.example.entities.Store" />
        <mapping class="com.example.entities.Category" />
        <mapping class="com.example.entities.Item" />
        <mapping class="com.example.entities.Basket" />
        <mapping class="com.example.entities.BasketItem" />
    </session-factory>
</hibernate-configuration>
